<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SUBJECT"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true" android:layout_alignRight="@+id/textView8"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" android:layout_below="@+id/textView7" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SET DATE"
            android:id="@+id/textView8" android:layout_below="@+id/spinner" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SET TIME"
            android:id="@+id/textView9" android:layout_below="@+id/datePicker2" android:layout_centerHorizontal="true"/>
    <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker2"
            android:layout_below="@+id/textView8" android:layout_centerHorizontal="true"/>
    <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePicker2"
            android:layout_below="@+id/textView9" android:layout_alignRight="@+id/datePicker2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:id="@+id/button7" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:onClick="setAdditionalLec"/>
</RelativeLayout>